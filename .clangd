CompileFlags:
  CompilationDatabase: build/debug_new
  # Add flags to help clangd find includes even if compile_commands.json is missing/incomplete
  Add:
    - "-std=c++20"
    - "-Isrc"
    - "-DRUNA2_ENGINE_EXPORTS"
    - "-DSPDLOG_FMT_RUNTIME_CHECKS=0"
    - "-Wall"
    - "-Wextra"
    # Add spdlog as regular include (not system) so defines work properly
    - "-I"
    - "build/debug_new/_deps/spdlog-src/include"
    - "-isystem"
    - "build/debug_new/_deps/sdl3-src/include"
    - "-isystem"
    - "build/debug_new/_deps/sdl3_image-src/include"
    - "-isystem"
    - "build/debug_new/_deps/sdl3_ttf-src/include"
    - "-isystem"
    - "build/debug_new/_deps/yaml-cpp-src/include"

# Index settings
Index:
  Background: Build

# Suppress warnings from external dependencies only (not project files)
Diagnostics:
  Suppress:
    - "modernize-deprecated-headers"
    - "invalid_consteval_call"
  UnusedIncludes: None
  ClangTidy:
    Remove:
      - misc-*
      - modernize-*
      - readability-*
      - cppcoreguidelines-*
      - performance-*
