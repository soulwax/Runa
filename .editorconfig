# File: .editorconfig 
# For: c++ project:

root = true

[*.{cpp,hpp,c,h}]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100
tab_width = 4
clang_format_style = file
[*.md]
trim_trailing_whitespace = false
max_line_length = off
[*.{yml,yaml}]
indent_size = 2
[*.{json,xml}]
indent_size = 2
[Makefile]
indent_style = tab
[*.{sh,bash}]
indent_style = space
indent_size = 2
[*.{ini,conf}]